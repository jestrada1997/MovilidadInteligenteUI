@model MovilidadInteligenteUI.Models.Deposito

@{
    ViewData["Title"] = "Crear Deposito";
}

<br />
<body>
    <br />
    <div class="container">
            <div class="card">
                <div class="card-body">
                    <h4>Crear Deposito</h4>
                    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Crear">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(model => model.idDeposito)

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(model => model.idUsuario)

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(model => model.estado)

                <div class="form-group">
                    <label asp-for="monto" class="control-label"></label>
                    <input asp-for="monto" class="form-control" />
                    <span asp-validation-for="monto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="fechaDeposito" class="control-label"></label>
                    <input asp-for="fechaDeposito" class="form-control" disabled="disabled" />
                    <span asp-validation-for="fechaDeposito" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                    <a asp-action="Perfil" asp-controller="Usuario" class="btn btn-primary">Regresar</a>
                </div>
            </form>
        </div>
    </div>
                </div>
            </div>
        </div>
    <div>

    </div>
</body>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
