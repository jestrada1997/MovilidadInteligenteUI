@model MovilidadInteligenteUI.Models.Usuario

@{
    ViewData["Title"] = "Detalle Usuario";
}


<br />
<body>
    <br />
    <div class="container">
        <div class="card">
            <div class="card-body">

                <div>
                    <h4>Detalle Usuario</h4>
                    @Html.AntiForgeryToken()
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.nombre)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.nombre)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.apellido1)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.apellido1)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.apellido2)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.apellido2)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.correo)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.correo)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.clave)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.clave)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.telefono)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.telefono)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.saldo)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.saldo)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.fechaCreacion)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.fechaCreacion)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.estado)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.estado)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a class="btn btn-primary" @Html.ActionLink("Editar", "UpdateCliente", new { id = Model.idUsuario })</a>
                    <a asp-action="Perfil" class="btn btn-primary">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</body>