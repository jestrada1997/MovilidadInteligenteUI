@model MovilidadInteligenteUI.Models.Usuario

@{
    ViewData["Title"] = "Perfil";
    Layout = "~/Views/Shared/_LoginPartialCliente.cshtml";
}

<br />
<body>
    <br />
    <div class="container">
            <div class="card">
                <div class="card-body">
                    <h5>Perfil</h5>
                    <hr />
                                <div class="row gutters-sm">
                                    <div class="col-md-4 mb-3">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="d-flex flex-column align-items-center text-center">
                                                    <div class="mt-3">
                                                        <h4>@Html.DisplayFor(model => model.nombre) @Html.DisplayFor(model => model.apellido1)</h4>
                                                        <p class="text-secondary mb-1">@Html.DisplayFor(model => model.rol)</p>

                                                        @*Botones clientes*@
                                                    <div class="form-vertical">
                                                        <br>
                                                        @Html.ActionLink("Cuenta", "GetUsuarioCliente", "Usuario", new { id = Model.idUsuario }, new { @class = "btn btn-primary" })
                                                        @Html.ActionLink("Depositar", "Crear", "Deposito", new { @*id = Model.IDUsuario*@}, new { @class = "btn btn-primary" })
                                                    <a class="btn btn-primary" @Html.ActionLink("Agendar Viaje", "GetDestino", "Unidad")</a> 
                                                        <br>
                                                    </div>
                                                        </div>
                                                    </div>
                                            </div>
                                        </div>
                                    </div>

                                    @*Información del evento*@
                                    <div class="col-md-8">
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <br />
                                                <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">Informacion de</i>Usuario</h6>


                                                @* Información de usuario*@
                                               
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <h6 class="mb-0">Email</h6>
                                                    </div>
                                                    <div class="col-sm-9 text-secondary">
                                                        @Html.DisplayFor(model => model.correo, new { @class = "control-label col-md-2" })
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <h6 class="mb-0">Teléfono</h6>
                                                    </div>
                                                    <div class="col-sm-9 text-secondary">
                                                        @Html.DisplayFor(model => model.telefono, new { @class = "control-label col-md-2" })
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <h6 class="mb-0">Saldo</h6>
                                                    </div>
                                                    <div class="col-sm-9 text-secondary">
                                                        @Html.DisplayFor(model => model.saldo, new { @class = "control-label col-md-2" })
                                                    </div>
                                                </div>
                                                <hr>
                                            </div>
                                        </div>
                                    </div>
                                </div>    
                </div>
            </div>
        </div>
    <div>
        
    </div>
</body>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }




