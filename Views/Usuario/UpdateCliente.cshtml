@model MovilidadInteligenteUI.Models.Usuario

@{
    ViewData["Title"] = "Actualizar Usuario";
    Layout = "~/Views/Shared/_LoginPartialCliente.cshtml";
}

<br />
<body>
    <br />
    <div class="container">
        <div class="card">
            <div class="card-body">

                <h4>Actualizar Usuario</h4>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @Html.HiddenFor(model => model.idUsuario)
                            <div class="form-group">
                                <label asp-for="nombre"></label>
                                <input class="form-control" asp-for="nombre" />
                            </div>
                            <div class="form-group">
                                <label asp-for="apellido1"></label>
                                <input class="form-control" asp-for="apellido1" />
                            </div>
                            <div class="form-group">
                                <label asp-for="apellido2"></label>
                                <input class="form-control" asp-for="apellido2" />
                            </div>
                            <div class="form-group">
                                <label asp-for="correo"></label>
                                <input class="form-control" asp-for="correo" />
                            </div>
                            <div class="form-group">
                                <label asp-for="clave"></label>
                                <input class="form-control" asp-for="clave" />
                            </div>
                            <div class="form-group">
                                <label asp-for="telefono"></label>
                                <input class="form-control" asp-for="telefono" />
                            </div>
                            <div readonly class="form-group">
                                <label asp-for="saldo"></label>
                                <input class="form-control" asp-for="saldo" readonly="@(true)" />
                            </div>
                            <div  class="form-group">
                                <label asp-for="fechaCreacion" ></label>
                                <input class="form-control" asp-for="fechaCreacion" readonly="@(true)"/>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @Html.HiddenFor(model => model.rol)
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @Html.HiddenFor(model => model.estado)
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Actualizar</button>
                                <a asp-action="Perfil" class="btn btn-primary">Regresar</a>
                            </div>
                        </form>

                        @if (ViewBag.Result == "Success")
                        {
                            <h2>Reservation</h2>
                            <table class="table table-sm table-striped table-bordered m-2">
                                <thead>
                                    <tr>
                                        <th>Identificacion</th>
                                        <th>Nombre</th>
                                        <th>Apellido 1</th>
                                        <th>Apellido 2</th>
                                        <th>Identificacion</th>
                                        <th>Correo</th>
                                        <th>Clave</th>
                                        <th>Telefono</th>
                                        <th>Saldo</th>
                                        <th>Fecha Creacion</th>
                                        <th>Rol</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@Model.idUsuario</td>
                                        <td>@Model.nombre</td>
                                        <td>@Model.apellido1</td>
                                        <td>@Model.apellido2</td>
                                        <td>@Model.correo</td>
                                        <td>@Model.clave</td>
                                        <td>@Model.telefono</td>
                                        <td>@Model.saldo</td>
                                        <td>@Model.fechaCreacion</td>
                                        <td>@Model.rol</td>
                                        <td>@Model.estado</td>
                                    </tr>
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
               
