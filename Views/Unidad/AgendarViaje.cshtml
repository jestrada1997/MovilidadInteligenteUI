@model MovilidadInteligenteUI.Models.Unidad

@{
    ViewData["Title"] = "Agendar Viaje";
    Layout = "~/Views/Shared/_LoginPartialCliente.cshtml";
}

<br />
<body>
    <br />
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h4>Agendar un viaje</h4>
                <hr />

                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Crear">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @Html.HiddenFor(model => model.idUnidad)
                            <div class="form-group">
                                <label asp-for="monto" class="control-label"></label>
                                <input asp-for="monto" class="form-control" />
                                <span asp-validation-for="monto" class="text-danger"></span>
                            </div>


                            <label asp-for="horarios" class="control-label"></label>
                            @*<select asp-for="horarios" class="form-control" name="rol">
                                <option> @Html.DisplayFor(modelItem => modelItem.horarios)</option>
                                </select>*@
                        <select asp-for="horarios" class="form-control">
                            @foreach (var item in Model.horarios)
                            {
                                <option> @item.ToLocalTime()  <br /></option>
                               
                            }

                        </select>

                        <div class="form-group">
                            <br />
                            <br />
                            <input type="submit" value="Crear" class="btn btn-primary" />
                            <a asp-action="GetDestino" class="btn btn-primary">Regresar</a>
                           
                            @*Falta crear metodo en pago
                            @Html.ActionLink("Continuar", "CrearCliente", "Pago", new { id = @Model.idUnidad, precio = @Model.monto })*@

                        </div>
                        </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </body>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
