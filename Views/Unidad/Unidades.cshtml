@model IEnumerable<MovilidadInteligenteUI.Models.Unidad>

@{
    ViewData["Title"] = "Tabla de Unidades";
}
<br />
<body>
    <br />
    <div class="container">
        <div class="row gutters-sm">
            <div class="card">
                <div class="card-body">
                    <h1>Tabla de Unidades</h1>
                    <p>
                        <a asp-action="Crear" class="btn btn-primary">Crear</a>
                    </p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.idUnidad)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ruta)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.monto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.placa)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.asientos)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.estado)
                                </th>
                                <th> Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.idUnidad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ruta)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.monto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.placa)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.asientos)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.estado)
                                </td>

                                <td>
                                    @Html.ActionLink("Editar", "Update", new { id = item.idUnidad }) |
                                    @Html.ActionLink("Detalles", "GetUnidad", new { id = item.idUnidad }) |
                                    @Html.ActionLink("Borrar", "Borrar", new { id = item.idUnidad })

                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>